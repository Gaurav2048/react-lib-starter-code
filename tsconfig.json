{
  "compilerOptions": {
      "paths": {
          "baseUrl": [
              "."
          ]
      },
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react-jsx",
      "declaration": true,
      "declarationDir": "dist",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules",
      "dist",
      "src/**/**.test.tsx"
  ]
}